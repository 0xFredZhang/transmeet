{
  "manifest_version": 3,
  "name": "TransMeet - 通用实时翻译",
  "version": "2.0.0",
  "description": "为任何网站提供实时音频转字幕和翻译功能",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "desktopCapture"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TransMeet - 实时翻译"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["audio-processor.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}